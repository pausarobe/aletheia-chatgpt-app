  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit",
    "bundle": "npx esbuild \"src/entries/*.tsx\" src/styles.css --bundle --format=esm --outdir=dist --entry-names=[name] --sourcemap",
